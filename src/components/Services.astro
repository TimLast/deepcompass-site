---
const services = [
  {
    title: "AI Training",
    description: "Interactive workshops that cut through the hype. Your team learns what AI can actually do for your business — and what it can't.",
    accent: "ocean"
  },
  {
    title: "Custom Automation",
    description: "We build AI tools that fit your workflows. Knowledge bases, smart assistants, content systems — whatever saves you hours every week.",
    accent: "gold"
  },
  {
    title: "Strategic Guidance",
    description: "Not sure where to start? We help you identify opportunities, avoid pitfalls, and build AI capabilities that actually matter.",
    accent: "seaglass"
  }
];
---

<section id="services" class="py-32 px-6">
  <div class="max-w-7xl mx-auto">
    <!-- Section intro - left-aligned -->
    <div class="max-w-3xl mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-ocean mb-6 leading-tight">
        We help SMBs navigate AI without the noise
      </h2>
      <p class="text-xl text-text-dark/70 leading-relaxed">
        Training, automation, and guidance — all focused on what actually works for your business.
      </p>
    </div>

    <!-- Service cards - asymmetric staggered layout -->
    <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
      {services.map((service, index) => (
        <div
          class={`group relative p-10 lg:p-12 rounded-2xl transition-all hover:scale-[1.02] ${
            service.accent === 'ocean' ? 'bg-ocean text-white' :
            service.accent === 'gold' ? 'bg-gold/10 border-2 border-gold/30' :
            'bg-seaglass/10 border-2 border-seaglass/30'
          } ${index === 0 ? 'md:col-span-2 lg:col-span-1' : ''} ${index === 2 ? 'md:col-start-2' : ''}`}
        >
          <h3 class={`text-2xl lg:text-3xl font-bold mb-4 ${
            service.accent === 'ocean' ? 'text-gold' : 'text-ocean'
          }`}>
            {service.title}
          </h3>
          <p class={`text-lg leading-relaxed ${
            service.accent === 'ocean' ? 'text-white/90' : 'text-text-dark/80'
          }`}>
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
