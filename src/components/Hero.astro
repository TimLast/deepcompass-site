<section class="min-h-[85vh] flex items-center px-6 py-32 relative overflow-hidden">
  <!-- Gradient background accent -->
  <div class="absolute inset-0 bg-gradient-to-br from-ocean/5 via-transparent to-gold/5 pointer-events-none"></div>

  <div class="max-w-7xl mx-auto w-full relative z-10">
    <div class="max-w-4xl">
      <!-- Main headline - left-aligned, bold -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-ocean mb-8 leading-[1.1]">
        Find your direction<br />
        <span class="text-gold">with AI</span>
      </h1>

      <!-- Supporting copy - direct and engaging -->
      <p class="text-xl md:text-2xl text-text-dark/80 mb-12 max-w-2xl leading-relaxed">
        Practical training and automation for SMBs.<br />
        No hype. Just AI that actually helps your business.
      </p>

      <!-- CTA buttons -->
      <div class="flex flex-col sm:flex-row gap-4">
        <a href="#contact" class="inline-flex items-center justify-center px-8 py-4 bg-ocean text-white rounded-lg font-semibold text-lg hover:bg-ocean/90 transition-all hover:scale-105">
          Start a conversation
        </a>
        <a href="#services" class="inline-flex items-center justify-center px-8 py-4 border-2 border-ocean text-ocean rounded-lg font-semibold text-lg hover:bg-ocean hover:text-white transition-all">
          See what we do
        </a>
      </div>
    </div>
  </div>
</section>
